# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Logging Configuration
# LOG_LEVEL: debug, info, warn, error (default: warn)
# LOG_LEVEL=warn

# Database Configuration
# For SQLite:
DB_DRIVER=sqlite
DB_DSN=file:data/lovely_eye.db?cache=shared&mode=rwc

# For PostgreSQL (uncomment to use):
# DB_DRIVER=postgres
# DB_DSN=postgres://user:password@localhost:5432/lovely_eye?sslmode=disable

# Authentication
JWT_SECRET=your-super-secret-key-change-in-production

# Cookie security (default: true for production)
# Set to false for local development without HTTPS
# SECURE_COOKIES=false

# Initial admin (optional - creates admin on first run)
# INITIAL_ADMIN_USERNAME=admin
# INITIAL_ADMIN_PASSWORD=changeme

# User registration (disabled by default, first user always becomes admin)
# ALLOW_REGISTRATION=false
